[user]
    name = Luis Herrera
    email = luheca@amazon.com
[color]
    ui = auto
[core]
    excludesfile = ~/.gitignore
    pager = less -FMRiX
[push]
    default = simple
[commit]
    template = ~/.gitmessage
[alias]
    dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)%an <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
